<%- include('../../partials/header.ejs') %>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <section class="mb-5">
                <a 
                href="/explorers/?filter=latest"
                class="btn <%= filter === 'latest'?'btn-primary': 'btn-secondary' %> "
                >
                Latest
                </a>
                <a 
                href="/explorers/?filter=week"
                class="btn <%= filter === 'week'?'btn-primary': 'btn-secondary' %> "
                >
                Week
                </a>
                <a 
                href="/explorers/?filter=month"
                class="btn <%= filter === 'month'?'btn-primary': 'btn-secondary' %> "
                >
                month
                </a>
                <a 
                href="/explorers/?filter=all"
                class="btn <%= filter === 'all'?'btn-primary': 'btn-secondary' %> "
                >
                All
                </a>
            </section>
            <section>
                <% if(posts.length  === 0){ %>
                    <p>There are no posts</p>
                <% }else{ %>
                    <% for(let post of posts){ %>
                        <div class="card card-body mb-3" >
                            
                            <% if(post.thumbnail){ %>
                                <img class=" img-fluid mb-2" src=<%= post.thumbnail  %> width="500px">
                            <% } %>  
                            <a href="/explorers/<%= post._id %> " style="color:black" >
                                <h4><%= post.title %></h4> </h4>
                                <p class='mb-4'><%= truncate(post.body) %> </p>
                            </a>
                            <div class="d-flex text-muted">
                                <%= moment(post.createdAt) %> 
                                Posted By <%= post.author.name %> 
                            </div>
                            
                        </div>
                     <% } %>  

                <% } %>   
            </section>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>


</body>
</html>
