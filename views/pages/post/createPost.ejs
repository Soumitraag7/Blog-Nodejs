<%- include('../../partials/header.ejs') %>
    <main class="main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                    <div class="card card-body my-5">
                        <%- include('../../partials/sidebar.ejs') %>

                    </div>
                </div>

                <div class="col-md-10">
                    <div class="row">
                        <div class="col-md-8 offset-md-2">
                            <div class="card card-body my-5" style="background-color: #363636;">
                                <div>
                                    <h2 style="text-align: center; color:#fff">
                                        <%= title %>
                                    </h2>
                                </div>
                                <div>
                                    <form action="/post/create" method="POST" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label style="color: #fff" for="title">Enter your post title</label>
                                            <input style="background-color: #fff; color:black" type="text" id="title"
                                                placeholder="enter your post title" name="title" class="form-control"
                                                value="<%= value.title && value.title%>">
                                            <div class="invalid-feedback d-block ">
                                                <%= error.title && error.title%>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <textarea id="tiny-mce"
                                                name="body"><%= value.body && value.body%></textarea>
                                            <div class="invalid-feedback d-block ">
                                                <%= error.body && error.body%>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label style="color: #fff" for="title">Enter your tags (Max:10</label>
                                            <input style="background-color: #fff; color:black" type="text" id="tags"
                                                placeholder="tag1, tag2, tag3" name="tags" class="form-control"
                                                value="<%= value.tags && value.tags%>">
                                            <div class="invalid-feedback d-block ">
                                                <%= error.tags && error.tags%>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label style="color: #fff" for="title">Enter your post thumbnail
                                                image</label>
                                            <input style="background-color: #fff; color:black" type="file"
                                                id="thumbnail" placeholder="Upoload" name="thumbnail"
                                                class="form-control">
                                        </div>

                                        <input type="submit" class="btn btn-primary" value="Save" />

                                    </form>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>





    <%- include('../../partials/footer.ejs') %>


        <script src="https://cdn.tiny.cloud/1/p3ml1al9mjbirq9s3guv3ezd9wtrhhvfjwkbdsn5px22r36z/tinymce/5/tinymce.min.js"
            referrerpolicy="origin"></script>
        <script src="/script/tinymce.js"></script>
        </body>

        </html>