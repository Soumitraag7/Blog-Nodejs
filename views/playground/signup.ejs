<%- include('../partials/header.ejs') %>
<main class="main-content">
    <div class="container py-100">
        <div class="row">
            <div class="col col-md-6 form-message">
                <h3 class="logo mb-4 text-center">Logo</h3>
                <span class="splash-description text-center mt-5 mb-5">Create your account</span>
                <form method="POST" action="/playground/validator">
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend"><i class="fas fa-user"></i></div>
                        <input class="form-control" id="name" name="name" type="text" placeholder="Username" autocomplete="off">
                      </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                          <div class="input-group-prepend"><i class="fas fa-envelope"></i></div>
                          <input class="form-control" id="email" name="email" type="text" placeholder="Email" autocomplete="off">
                        </div>
                      </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend"><i class="fas fa-lock"></i></div>
                        <input class="form-control" id="password" name="password" type="password" placeholder="Password">
                      </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                          <div class="input-group-prepend"><i class="fas fa-lock"></i></div>
                          <input class="form-control" id="password" name="confirmPassword" type="password" placeholder="Retype Password">
                        </div>
                      </div>
                      
                    <div class="form-group login-submit"><input class="btn submit" type="submit" value="Sign UP" ></div>
                    <div class="title mb-4"><span>Or</span></div>
                    <div class="form-group row social-signup mb-4">
                        <div class="col-6">
                          <button class="btn btn-block btn-social btn-color btn-facebook" type="button"><i class="fab fa-facebook-f"></i> Facebook</button>
                        </div>
                        <div class="col-6">
                          <button class="btn btn-block btn-social btn-color btn-google" type="button"><i class="fab fa-google"></i> Google</button>
                        </div>
                      </div>
                      <p class="conditions">By creating an account, you agree with the <a href="#">Terms and Conditions</a>.</p>
                  </form>
            </div>
            <div class="col-md-6 user-message">
                <span class="splash-message text-start">Welcome to<br> to Our Blog,<br> Enjoy!</span>
                <span class="alternative-message text-end">Already have an account? <a href="/auth/login">Login In</a></span>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>


</body>
</html>